{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
